    <style name="TextViewBase.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewBase.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewBase.Small.Up">
        <item name="android:textColor">@color/colorUp</item>
    </style>

    <style name="TextViewBase.Small.Down">
        <item name="android:textColor">@color/colorDown</item>
