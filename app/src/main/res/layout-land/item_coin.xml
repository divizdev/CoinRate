<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_coin"
                android:layout_width="32dp" android:layout_height="32dp" android:layout_gravity="center_vertical"
        />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView style="@style/TextViewBase"
                          android:id="@+id/symbol_coin"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="{symbol_coin}" android:textStyle="bold"/>
                <TextView style="@style/TextViewBase" android:paddingStart="@dimen/activity_horizontal_margin"
                          android:paddingLeft="@dimen/activity_horizontal_margin"
                          android:paddingRight="@dimen/activity_horizontal_margin"
                          android:paddingEnd="@dimen/activity_horizontal_margin"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/separator_name_coin"/>
                <TextView style="@style/TextViewBase"
                          android:id="@+id/name_coin"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="{name_coin}"/>
                <TextView style="@style/TextViewBase"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:id="@+id/rate_coin"
                          android:paddingStart="@dimen/activity_horizontal_margin"
                          android:paddingLeft="@dimen/activity_horizontal_margin"
                          android:paddingRight="@dimen/activity_horizontal_margin"
                          android:paddingEnd="@dimen/activity_horizontal_margin"
                          android:text="{10 000}"
                          android:gravity="end" android:layout_weight="1" android:textStyle="bold|italic"/>
                <TextView style="@style/TextViewBase"
                          android:id="@+id/currency_rate_coin"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/name_unit_price"
                          android:paddingStart="@dimen/activity_horizontal_margin"
                          android:paddingLeft="@dimen/activity_horizontal_margin"
                          android:paddingEnd="16dp"
                          android:paddingRight="16dp"
                          android:textStyle="italic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_margin">

                <TextView
                    style="@style/TextViewBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_percent_change_24h"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/percent_change_24h"
                    style="@style/TextViewBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:text="+2" />

                <TextView
                    style="@style/TextViewBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_unit_percent_change" />

                <TextView
                    style="@style/TextViewBase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/name_percent_change_7d"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/percent_change_7d"
                    style="@style/TextViewBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:baselineAligned="false"
                    android:gravity="end"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:text="-1" />

                <TextView
                    style="@style/TextViewBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/name_unit_percent_change" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

