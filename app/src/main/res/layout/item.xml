<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="2">
    <android.support.v7.widget.AppCompatImageView android:layout_column="0" android:layout_row="0"
                                                  android:id="@+id/img_coin"
                                                  android:layout_width="40dp" android:layout_height="40dp"
                                                  android:layout_rowSpan="2"/>

    <TextView style="@style/text_coin" android:layout_row="0" android:layout_column="1" android:id="@+id/name_coin"
              android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="name_coin"/>
    <TextView style="@style/text_coin" android:layout_row="0" android:layout_column="2" android:id="@+id/rate_coin"
              android:text="10 000"
              android:gravity="end" android:layout_gravity="fill"/>
    <TextView style="@style/text_coin" android:layout_row="0" android:layout_column="3"
              android:id="@+id/currency_rate_coin"
              android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="USD"
    />


    <TextView style="@style/text_coin" android:layout_row="1" android:layout_column="1"
              android:id="@+id/percent_change_24h"
              android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="24h:+2%"/>
    <TextView style="@style/text_coin" android:layout_row="1" android:layout_column="2"
              android:id="@+id/percent_change_7d"
              android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7d:-1 %"
              android:layout_columnSpan="2" android:layout_gravity="fill_horizontal" android:gravity="end"
    />


</GridLayout>
